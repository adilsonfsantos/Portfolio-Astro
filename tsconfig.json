{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"noErrorTruncation": true,
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@assets/*": [
				"src/assets/*"
			],
			"@images/*": [
				"portfolio-static/assets/images/*"
			],
			"@layouts/*": [
				"src/layouts/*"
			]
		}
	}
}
