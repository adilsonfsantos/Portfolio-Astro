{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"noErrorTruncation": true,
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@assets/*": ["src/assets/*"],
			"@images/*": ["portfolio-static/assets/images/*"],
			"@layouts/*": ["src/layouts/*"]
		}
	}
}
