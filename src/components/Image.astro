---
import { Picture } from "astro:assets";
import { string } from "astro:schema";

const { src, alt, type } = Astro.props;

if (alt === undefined || typeof alt !== "string") {
	// You bet we throw an error on missing alt (alt="" works okay)
	throw new Error(`Missing \`alt\` on image from: ${src}`);
}
let imageSizes: string;
let loadType: "lazy" | "eager" | undefined = "lazy";
let decode: "async" | "sync" | undefined = "async";
let imageWidths: number[];

if (type === "card") {
	imageSizes =
		"(min-width: 1260px) 470px, (min-width: 620px) calc(42.1vw - 52px), \
				calc(92.33vw - 64px), 100vw";
	loadType = "lazy";
	imageWidths = [320, 480, 768];
	decode = "async";
} else if (type === "banner") {
	imageSizes = "(min-width: 1200px) 1104px, 87.5vw";
	loadType = "eager";
	decode = "sync";
	imageWidths = [320, 480, 768, 1104];
} else {
	imageSizes = "(min-width: 1200px) 1104px, 87.5vw";
	loadType = "lazy";
	imageWidths = [320, 480, 768, 1104];
}
---

<Picture
	src={src}
	alt={alt}
	loading={loadType}
	sizes={imageSizes}
	widths={imageWidths}
	decoding={decode}
	formats={["webp"]}
	quality={90}
	fallbackFormat="webp"
/>
