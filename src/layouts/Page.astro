---
import "../assets/css/page.scss";
import Contact from "../components/Contact.astro";
import { site_name } from "../consts";
import Default from "./Default.astro";

const { frontmatter } = Astro.props;
const title = [frontmatter.title, site_name].filter(Boolean).join(" | ")
---
<Default title={title} description={frontmatter.description} image={frontmatter.image}>
	<article class="page grid--module" role="article">
			<div class="page__header">
			<div class="page__header--container"><h1 class="page__header--title" itemprop="name headline">{ frontmatter.title }</h1></div>
		</div>
		<div class="page__content" itemprop="articleBody">
			<div class="page__content--container">
				<slot />
			</div>
		</div>
	</article>
	<!-- {% include "contact" %} -->
	<Contact />
</Default>
