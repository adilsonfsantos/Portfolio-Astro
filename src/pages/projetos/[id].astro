---
import { getCollection, render } from "astro:content";
import { site_name } from "../../consts";
import type { CollectionEntry } from "astro:content";
import Post from "@layouts/Post.astro";
import Default from "@layouts/Default.astro";

interface Props {
	post: CollectionEntry<"projetos">;
	prevPost: CollectionEntry<"projetos"> | null;
	nextPost: CollectionEntry<"projetos"> | null;
}

export async function getStaticPaths() {
	const posts = (await getCollection("projetos")).sort(
		(a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
	);
	return posts.map((post, index) => ({
		params: { id: post.id },
		props: {
			prevPost: index + 1 < posts.length ? posts[index + 1] : null,
			nextPost: index > 0 ? posts[index - 1] : null,
			post,
		},
	}));
}

const { post, prevPost } = Astro.props as Props;
const { Content } = await render(post);
const title = [post.data.title, site_name].filter(Boolean).join(" | ");
---

<Default
	title={title}
	description={post.data.description}
	image={post.data.image}>
	<Post {...post.data}>
		<Content />
	</Post>
	<section class="postnav">
		<div class="postnav__content">
			{
				prevPost ? (
					<a
						href={`/projetos/${prevPost.id}/`}
						class="postnav__link"
						rel="next">
						Pr√≥ximo projeto
						<br />
						<span class="postnav__title">{prevPost.data.title}</span>
					</a>
				) : (
					<a href="/" class="postnav__link">
						Sem mais projetos
						<br />
						<span class="postnav__title">Voltar para a home</span>
					</a>
				)
			}
		</div>
	</section></Default
>
