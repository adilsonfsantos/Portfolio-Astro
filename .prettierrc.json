{
	"useTabs": true,
	"printWidth": 80,
	"arrowParens": "always",
	"semi": true,
	"bracketSameLine": true,
	"trailingComma": "all",
	"plugins": ["prettier-plugin-astro"],
	"overrides": [
		{
			"files": ["*.md", "*.mdx", "*.toml", "*.yml", "*.yaml"],
			"options": {
				"useTabs": false
			}
		},
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	]
}
