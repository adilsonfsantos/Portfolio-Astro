{
	"name": "portfolio-astro",
	"description": "Portfolio of Adilson Santos using Astro",
	"type": "module",
	"version": "0.0.1",
	"engines": {
		"node": ">=20.0.0"
	},
	"browserslist": [
		"defaults"
	],
	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"stylelint": "stylelint 'src/**/*.{css,scss}' --ignore-path .gitignore",
		"eslint": "eslint .",
		"format": "prettier --check --ignore-unknown '*.{js,ts,astro,scss,mdx,css}'",
		"typecheck": "tsc --noEmit",
		"prepare": "husky",
		"csp:hash": "node scripts/generate-csp-hashes.ts"
	},
	"lint-staged": {
		"*.{js,ts,astro,mdx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{scss,css}": [
			"stylelint --fix",
			"prettier --write"
		],
		"*.astro": [
			"node scripts/generate-csp-hashes.ts"
		]
	},
	"dependencies": {
		"@astrojs/check": "^0.9.6",
		"@astrojs/mdx": "^4.3.13",
		"@astrojs/rss": "^4.0.14",
		"@astrojs/sitemap": "^3.6.0",
		"@astrojs/ts-plugin": "^1.10.6",
		"astro": "^5.16.6",
		"astro-compressor": "^1.2.0",
		"sass": "^1.97.1"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.2",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-astro": "^1.5.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-mdx": "^3.6.2",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-astro": "^0.14.1",
		"stylelint": "^16.26.1",
		"stylelint-config-standard-scss": "^16.0.0",
		"stylelint-prettier": "^5.0.3",
		"stylelint-scss": "^6.13.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.1",
		"wrangler": "^4.54.0"
	}
}
